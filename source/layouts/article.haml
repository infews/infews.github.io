= wrap_layout "layout" do
  %article.post
    %header
      %h1
        = current_article.title
      %h2.date
        = current_article.date.strftime('%e %B %Y')
        &#8212;
        = reading_time_for current_article.body
    %section#post-body= yield
    = component 'article_footer', {tags: current_article.tags, series: current_article.data.series}
  %footer#post-meta
    %a{href:"/"}
      %img.avatar{ :src => url_for("/images/dwf.png"), :alt => "Avatar" }
      .details
        .dark= config[:site_author]
        .light= config[:site_subtitle]
    = component 'sharing'
