!!! 5
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= page_title
    %link{rel: "alternate", href: "/feed.xml", type: "application/atom+xml", title: "Atom Feed"}
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/holiday.css@0.11.2"}
    %script{src:"https://kit.fontawesome.com/e76ee0328c.js", crossorigin: "anonymous"}
    %link{rel: "stylesheet", href: "/stylesheets/v23.css"}
    %script{type: "application/ld+json"}
      != linking_data_for(locals, current_article, page_articles)
    - if development?
      %link{rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.2.3/gh-fork-ribbon.min.css"}
    %link{rel: "stylesheet", href: "/stylesheets/rouge-github-dark.css"}
  %body
    %nav.menu
      %ul
        %li
          %a{href: "/", class: current_page.data.hide_home} Home
        %li
          %span Posts
          %ul
            %li
              %a{href: "/series/the-cd-test"} The CD Test
            %li
              %a{href: "/series/obsidian"} How I Obsidian
            %li
              %a{href: "/posts"} All Posts
            %li
              %a{href: "/all_tags"} All Tags
        %li
          %a{href: "/about_me"} About Me
    - if development?
      = component "dev_ribbon"
    %main{class: wrapper_classes_for(current_page.data)}
      = yield
    %footer.site
      %p.small= "Â© #{config[:site_author]} #{Time.now.year}"
    = component "google_analytics"